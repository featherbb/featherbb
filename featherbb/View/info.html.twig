{% extends '@forum/layout.html.twig' %}

{% block content %}
    {{ fireHook('view.error.start') }}

    <div id="msg" class="block info">
        <h2><span>{{ trans('Info') }}</span></h2>
        <div class="box">
            <div class="inbox">
                <p>
                    {% if html %}
                        {{ msg|raw }}
                    {% else %}
                        {{ msg }}
                    {% endif %}
                </p>

                {% if backlink %}
                    <p><a href="javascript: history.go(-1)">{{ trans('Go back') }}</a></p>
                {% endif %}
            </div>
        </div>
    </div>

    {{ fireHook('view.error.end') }}
{% endblock content %}
